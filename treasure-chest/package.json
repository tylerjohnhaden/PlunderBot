{
  "name": "treasure-chest",
  "version": "0.0.1",
  "description": "A treasure chest to store the booty",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "concurrently \"npm run ganache-start\" \"npm run truffle-migrate\"",
    "test": "concurrently \"npm run ganache-start\" \"npm run truffle-migrate && truffle test\" --kill-others --success first",
    "ganache-start": "ganache-cli --networkId 25624 --allowUnlimitedContractSize --gasLimit 6500000 -m $MNEMONIC -f $INFURA_KOVAN_ENDPOINT",
    "truffle-migrate": "rm -rf build && truffle migrate --reset --all --clean --network development"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tylerjohnhaden/PlunderBot"
  },
  "author": "Tyler John Haden",
  "license": "Apache-2.0",
  "dependencies": {
    "concurrently": "^4.0.1",
    "ganache-cli": "^6.1.8",
    "truffle": "^4.1.14",
    "truffle-hdwallet-provider": "0.0.6",
    "truffle-test-utils": "^0.1.0"
  }
}
